<?php $this->headTitle('Projects'); ?>

<p><a href="<?php echo $this->url('project/create'); ?>" class="btn">New Project</a></p>

<?php if (count($this->projects)) { ?>
    <ul class="data-list">
        <?php foreach ($this->projects as $project) { ?>
            <li>
                <h2>
                    <a href="<?php echo $this->url('project/update', array('id' => $project->getId())); ?>">
                        <?php echo $project->getName(); ?>
                    </a>
                </h2>

                <p><?php echo $project->getDescription(); ?></p>

                <ul>
                    <li><a class="btn btn-danger btn-small" href="<?php echo $this->url('project/delete', array('id' => $project->getId())); ?>">Remove</a></li>
                </ul>
            </li>
        <?php } ?>
    </ul>
<?php } else { ?>
    <p>There are no projects yet, would you like to create one?</p>
<?php } ?>

<p><a href="<?php echo $this->url('project/create'); ?>" class="btn">New Project</a></p>