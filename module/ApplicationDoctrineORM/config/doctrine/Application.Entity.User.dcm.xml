<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Application\Entity\User" table="user">
        <id name="id" type="bigint" column="id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="identity" type="string" column="identity" nullable="false" precision="0" scale="0"/>
        <field name="credential" type="string" column="credential" nullable="false" precision="0" scale="0"/>
        <field name="displayName" type="string" column="displayName" nullable="true" precision="0" scale="0"/>
        <field name="active" type="boolean" column="active" nullable="false" precision="0" scale="0"/>

        <many-to-many field="teams" mapped-by="members" target-entity="Application\Entity\Team" />
        <one-to-many field="snippets" mapped-by="createdBy" target-entity="Application\Entity\Snippet" />
        <one-to-many field="sshKeys" mapped-by="createdBy" target-entity="Application\Entity\SshKey" />
    </entity>
</doctrine-mapping>
